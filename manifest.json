{
  "manifest_version": 3,
  "name": "WideMode AI",
  "version": "1.0.0",
  "description": "Make ChatGPT, Gemini, Claude, and other AI chats wider for easier reading.",
  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-32.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://*.claude.ai/*"
      ],
      "js": ["content/widemode.js"],
      "run_at": "document_idle"
    }
  ]
}
